<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.collections.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="500.0" minWidth="700.0" prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fxml.MyController">
   <top>
      <MenuBar fx:id="menuBar" BorderPane.alignment="CENTER">
        <menus>
          <Menu fx:id="menuFile" mnemonicParsing="false" text="File">
            <items>
                  <MenuItem fx:id="logoutMenuItem" mnemonicParsing="false" onAction="#handleLogOut" text="Log out" />
              <MenuItem fx:id="closeMenuItem" mnemonicParsing="false" onAction="#handleClose" text="Close   CTRL+C" />
            </items>
          </Menu>
            <Menu fx:id="menuEdit" mnemonicParsing="false" text="Edit">
               <items>
                  <MenuItem fx:id="loadMenuItem" mnemonicParsing="false" onAction="#handleLoad" text="Load" />
               </items>
            </Menu>
            <Menu fx:id="menuAmout" mnemonicParsing="false" text="About">
               <items>
                  <MenuItem fx:id="aboutMenuItem" mnemonicParsing="false" onAction="#handleAbout" text="About me" />
               </items>
            </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <TabPane fx:id="tabPane" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab fx:id="studentsTab" closable="false" text="Students">
               <content>
                  <VBox>
                     <children>
                        <TableView fx:id="tableView">
                          <columns>
                            <TableColumn fx:id="markColumn" prefWidth="165.0" text="Mark">
                                <cellValueFactory><PropertyValueFactory property="mark" />
                                 </cellValueFactory>
                                 
                            </TableColumn>
                            <TableColumn fx:id="firstNameColumn" prefWidth="185.0" text="First name">
                            <cellValueFactory><PropertyValueFactory property="firstName" />
                                 </cellValueFactory>
                            </TableColumn>
                              <TableColumn fx:id="lastNameColumn" prefWidth="185.0" text="Last name">
                              <cellValueFactory><PropertyValueFactory property="lastName" />
                                 </cellValueFactory>
                            </TableColumn>
                              <TableColumn fx:id="ageColumn" prefWidth="165.0" text="Age">
                              <cellValueFactory><PropertyValueFactory property="age" />
                                 </cellValueFactory>
                            </TableColumn>
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />

                           </columnResizePolicy>
                        </TableView>
                        <HBox spacing="10.0">
                           <children>
                              <TextField fx:id="markInput" prefWidth="100.0" promptText="Mark" />
                              <TextField fx:id="firstNameInput" layoutX="10.0" layoutY="10.0" prefWidth="150.0" promptText="First name" />
                              <TextField fx:id="lastNameInput" layoutX="159.0" layoutY="10.0" prefWidth="150.0" promptText="Last name" />
                              <TextField fx:id="ageInput" layoutX="159.0" layoutY="10.0" prefWidth="100.0" promptText="Age" />
                              <Region HBox.hgrow="ALWAYS" />
                              <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleAddButton" text="Add" />
                              <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDeleteButton" text="Delete" />
                           </children>
                           <VBox.margin>
                              <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                           </VBox.margin>
                        </HBox>
                     </children>
                  </VBox>
               </content>
          </Tab>
          <Tab fx:id="loggsTab" text="Loggs">
               <content>
                  <AnchorPane>
                     <children>
                        <TextArea fx:id="textArea" layoutX="14.0" layoutY="14.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="10.0" />
                     </children>
                  </AnchorPane>
               </content>
          </Tab>
            <Tab fx:id="histogramTab" text="Histogram">
               <content>
                  <AnchorPane prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <BarChart fx:id="barChart" categoryGap="7.0" title="Distribution of Marks" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                          <xAxis>
                            <CategoryAxis side="BOTTOM" />
                          </xAxis>
                          <yAxis>
                            <NumberAxis side="LEFT" />
                          </yAxis>
                        </BarChart>
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
        </tabs>
      </TabPane>
   </center>
</BorderPane>
